<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:fillViewport="true"
    tools:context=".AniQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            card_view:cardBackgroundColor="@color/transparent_black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/ll_progress_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:indeterminate="false"
                        android:max="10"
                        android:minHeight="20dp"
                        android:progress="4"
                        android:theme="@style/PurpleAccent" />

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp"
                        tools:text="0/10" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_cscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    tools:text="Score: N/A" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            card_view:cardBackgroundColor="@color/transparent_black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:textSize="22sp"
                    tools:text="Question text" />

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_margin="12dp"
                    android:scaleX="-1"
                    android:src="@drawable/img_test"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/default_option_border_bg"
                        android:text="âœ“"
                        android:textColor="@color/transparent_white"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:gravity="center"
                        android:padding="8dp">

                        <Chronometer
                            android:id="@+id/cm_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="80dp"
                            android:format="%.0s"
                            android:textColor="@color/light_gray" />

                        <TextView
                            android:id="@+id/tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="15"
                            android:textColor="@color/transparent_white"
                            android:textSize="32sp" />

                        <ProgressBar
                            android:id="@+id/pb_timer"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="30"
                            android:progress="15"
                            android:progressDrawable="@drawable/circular"
                            android:rotation="90"
                            android:scaleX="-1" />

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/default_option_border_bg"
                        android:text="+"
                        android:textColor="@color/transparent_white"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_txtopts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_option_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/default_option_border_bg"
                        android:gravity="center"
                        android:padding="14dp"
                        android:textColor="@color/light_gray"
                        android:textSize="18sp"
                        tools:text="Option 1" />

                    <TextView
                        android:id="@+id/tv_option_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/selected_option_border_bg"
                        android:gravity="center"
                        android:padding="14dp"
                        android:textColor="@color/light_gray"
                        android:textSize="18sp"
                        tools:text="Option 2" />

                    <TextView
                        android:id="@+id/tv_option_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/default_option_border_bg"
                        android:gravity="center"
                        android:padding="14dp"
                        android:textColor="@color/light_gray"
                        android:textSize="18sp"
                        tools:text="Option 3" />

                    <TextView
                        android:id="@+id/tv_option_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/default_option_border_bg"
                        android:gravity="center"
                        android:padding="14dp"
                        android:textColor="@color/light_gray"
                        android:textSize="18sp"
                        tools:text="Option 4" />

                </LinearLayout>

                <TableLayout
                    android:id="@+id/tl_imgopts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TableRow>

                        <ImageView
                            android:id="@+id/iv_option_one"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:alpha="0.75"
                            android:src="@drawable/img_test" />

                        <ImageView
                            android:id="@+id/iv_option_two"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:alpha="0.75"
                            android:src="@drawable/img_test" />

                    </TableRow>

                    <TableRow>

                        <ImageView
                            android:id="@+id/iv_option_three"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:alpha="0.75"
                            android:src="@drawable/img_test" />

                        <ImageView
                            android:id="@+id/iv_option_four"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:alpha="0.75"
                            android:src="@drawable/img_test" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            card_view:cardBackgroundColor="@color/transparent_black">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/default_option_border_bg"
                android:text="@string/btn_submit"
                android:textColor="@color/transparent_white"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>